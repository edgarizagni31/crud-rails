<div class="card w-50 mx-auto mt-4">
  <div class="card-body">
    <h2 class="card-title">Crear cuenta</h2>
    <div class="mb-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="w-100 mb-3">
          <%= f.label :email, class: "form-label" %><br />
          <div class="w-100">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 p-2" %>
          </div>
        </div>
        <div class="w-full mb-3">
          <%= f.label :password, "Contraseña", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-100 p-2" %>
        </div>
        <div class="w-full mb-3">
          <%= f.label :password_confirmation, "Confirmar contraseña", class: "form-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100 p-2" %>
        </div>
        <div class="actions">
          <%= f.submit "Registrarse", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>
